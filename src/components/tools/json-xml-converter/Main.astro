<script>
	import jsnview from 'jsnview';
	import 'jsnview/build/index.css';

	const errorAlert = document.querySelector('#error');
	const resultContainer = document.querySelector('#result');
	const jsnviewOptions = {
		showLen: true,
		showType: false,
		showBrackets: true,
		showFoldmarker: false,
		colors: { boolean: '#ff2929', null: '#ff2929', string: '#690', number: '#905', float: '#002f99' },
	};

	const button = document.querySelector('#submit');

	function parseJsonStringOrFalse(str) {
		try {
			return JSON.parse(str);
		} catch (e) {
			return false;
		}
	}

	function resetPage() {
		errorAlert.style.display = 'none';
		resultContainer.innerHTML = '';
	}

	function formatJson(event) {
		event.preventDefault();
		resetPage();

		var input = document.getElementById('input').value;
		const parsedJson = parseJsonStringOrFalse(input);
		if (!parsedJson) {
			errorAlert.style.display = 'block';
			return;
		}

		const treeView = jsnview(parsedJson, jsnviewOptions);
		resultContainer.innerHTML = treeView.outerHTML;
	}
	button.addEventListener('click', formatJson);
	resetPage();
</script>

